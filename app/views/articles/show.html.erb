<div class="container">
  <div class="article-header row grid">
    <div class="col-sm-12 article-center">
      <%= image_tag("/assets/#{@article.img}", class: "img-fluid") %>
      <div class="text-box">
        <h1 class="article-title title-center">
          <%= @article.title %>
        </h1>
        
        <div class="article-format">
          <a href="#" data-toggle="modal" data-target="#editModal">Edit</a> | 
          <%= link_to 'Delete', article_path(@article),
              method: :delete,
              data: { confirm: 'Delete this article?' } %>
        </div>
        
        <div class="meta">  
          by <%= @article.author %> â€” <%= @article.created_at %>
        </div>
        
        <p class="article-text">
          <%= @article.text %>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
  <button type="button" class="close close-marker" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="new-post-title">Update Article</div>
      </div>
      <div class="modal-body">

        <%= render 'editform' %>
        
      </div>
    </div>
  </div>
</div>