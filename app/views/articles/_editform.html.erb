<%= form_with model: @article, url: @article, action: 'update' do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
    Oh Snap! Here's what went wrong:
      <% @article.errors.full_messages.each do |msg| %>
        <div>- <%= msg %></div>
      <% end %>
    </div>
  <% end %>

  <div class="form-box">

    <p>
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: "field-text" %>
    </p>

    <p>
      <%= form.label :author, class: 'form-label' %>
      <%= form.text_field :author, class: "field-text" %>
    </p>

    <p>
      <%= form.label :summary, class: 'form-label' %>
      <%= form.text_area :summary, class: "field-text" %>
    </p>

    <p>
      <%= form.label :text, class: 'form-label' %>
      <%= form.text_area :text, class: "field-text" %>
    </p>
  </div>
  <div class="submit-box">
    <%= form.submit 'Update Article', class: 'btn btn-secondary form-btn' %>
    <%= button_to 'Close', { type: 'button' }, { class: 'btn btn-secondary form-btn', 'data-dismiss': "modal"} %>
  </div>

<% end %>