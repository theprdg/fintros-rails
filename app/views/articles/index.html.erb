<div class="container">
  <div class="main-header">
    <h6>FINTROS</h6>
    <h1>Magazine</h1>
    <h3>Strategies And Stories To Help You In Your Job Search</h3>
  </div>
  <div class="row grid">
    <% @articles.reverse_each do |article| %>
      <%= link_to article_path(article), class: "col-md-12 col-lg-6" do %>
        <div class='article-box'>
          <%= image_tag("/assets/#{article.img}", class: "img-fluid")%>
          <div class="article-txt-box">
            <h3 class="article-title"><%= article.title %></h3>
            <%= article.summary %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
